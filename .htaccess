<IfModule mod_rewrite.c>
    RewriteEngine On

    # Pastikan modul rewrite diaktifkan
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

# Tambahan opsional untuk meningkatkan keamanan
# Menonaktifkan akses langsung ke file penting
<FilesMatch "(^application|^system|\.env|composer\.(json|lock))">
    Order deny,allow
    Deny from all
</FilesMatch>

